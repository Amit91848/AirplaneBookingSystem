<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile {{user.name}}</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" >
    <link rel="stylesheet" href="../stylesheets/profile.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta2/css/all.min.css"/>
    <link
    rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"
  />
    <script src="https://code.jquery.com/jquery-3.6.0.js"></script>
</head>
<body>
    <div class="fluid-container">
        <div class="editModal-background">
            <div class="editModal-container">
                <div class="profileEditModal">
                    <div class="editModal-heading margin-left">
                        Edit Profile
                    </div>
                    <div class="editModal margin-left" action="/upateProfile" method="post">
                        <div class="row-1">
                            <div class="edit-input-container name-container">
                                <div class="edit-heading-container">
                                    <p class="editfullName">Full Name</p>
                                </div>
                                <div class="edit-dropdown-container">
                                    <input class="modal-name-input" value = '{{user.name}}' type="text" name="name" id="">
                                </div>
                            </div>
                            <div class="edit-input-container birthDay-container">
                                <div class="edit-heading-container">
                                    <p class="editBirthDay">Birthday</p>
                                </div>
                                <div class="edit-dropdown-container">
                                    <input value={{#if user.birthDay}}
                                        {{user.birthDay}}
                                    {{else}}
                                        ""
                                    {{/if}}
                                    type="date" name="birthDay" class="modal-birthday-input">
                                </div>
                            </div>
                        </div>
                        <div class="row-2">
                            <div class="edit-input-container gender-container">
                                <div class="edit-heading-container">
                                    <p class="editGender">Gender</p>
                                </div>
                                <div class="edit-dropdown-container">
                                    <select class="modal-input-gender" name="gender" id="">
                                        {{#if user.Gender}}
                                            <option value="{{user.Gender}}" selected hidden disabled>{{user.Gender}}</option>
                                        {{else}}
                                            <option value="none" selected hidden disabled>Gender</option>
                                        {{/if}}
                                        <option value="Male">Male</option>
                                        <option value="Female">Female</option>
                                    </select>
                                </div>
                            </div>
                            <div class="edit-input-container maritalStatus-container">
                                <div class="edit-heading-container">
                                    <p class="editMaritalStatus">Marital Status</p>
                                </div>
                                <div class="edit-dropdown-container">
                                    <select class="modal-input-marital-status" name="maritalStatus" id="">
                                        {{#if user.maritalStatus}}Gender
                                            <option value="{{user.martialStatus}}" selected hidden disabled>{{user.maritalStatus}}</option>
                                        {{else}}
                                            <option value="none" selected hidden disabled>Status</option>
                                        {{/if}}
                                        <option value="Married">Married</option>
                                        <option value="Single">Single</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="editModal-btn-container">
                        <div class="cancelBtn">Cancel</div>
                        <button class="editSaveBtn" type="submit">Save</button>
                    </div>
                </div>
                <div class="passwordEditModal">
                    <div class="editModal-heading margin-left lessMarginTop">
                        Edit Profile
                    </div>
                    <div class="passwordContainer">
                        <div class="password-input-container newpasswordContainer">
                            <div class="edit-heading-container">
                                Enter Old Password
                            </div>
                            <div class="edit-dropdown-container pswrdCont">
                                <input class="oldPasswordInput" type="text" name="oldPassword" id="">
                            </div>
                        </div>
                        <div class="password-input-container oldpasswordContainer">
                            <div class="edit-heading-container">
                                Enter New Password
                            </div>
                            <div class="edit-dropdown-container pswrdCont">
                                <input class="newPasswordInput" type="text" name="newPassword" id="">
                            </div>
                        </div>
                        <div class="password-input-container confirmpasswordContainer">
                            <div class="edit-heading-container">
                                Confirm New Password
                            </div>
                            <div class="edit-dropdown-container pswrdCont">
                                <input class="confirmPasswordInput" type="text" name="confirmPassword" id="">
                            </div>
                        </div>
                    </div>

                    <div class="savePasswordBtnContainer">
                        <div class="editModal-btn-container">
                            <div class="cancelBtn">Cancel</div>
                            <button class="passwordSaveBtn" type="submit">Save</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="loading-screen">
            <div class="loader-container">
                <div class="spinner-border text-light" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
            </div>
        </div>
        <div class="navbar-container">
            <div class="left-container">
                <span class="logo">Las Venturas Airlines</span>
            </div>
                <ul class="right-container">
                    <a class="home" href="/homepage">Home</a>
                    <a class="profile" href="/profile">Profile</a>
                    {{#if user}}
                        <a class="logout" href="/logout" >Logout {{user.name}}</a>
                    {{else}}
                        <li class="login-signup">Login/Signup</li>
                    {{/if}}
                </ul>
        </div>
        <div class="main-container">
            <div class="secContainer">
                <div class="leftSecContainer animate__animated animate__fadeIn">
                        <div class="profilePhotoContainer">
                        <div class="profileBackground"></div>
                        <div class="profileText">
                            <p class="profileP"></p>
                        </div>
                    </div>
                    <div class="details">
                        <div class="name">{{user.name}}</div>
                        <div class="personalProfile">Personal Profile</div>
                    </div>
                    <ul class="menu">
                        <li class="menu-profile menu-btn">
                            <div class="logo">
                                <i class="far fa-user"></i>
                            </div>
                            <div class="text">
                                <a href="#profile-card">Profile</a>
                            </div>
                        </li>
                        <li class="menu-login-details menu-btn">
                            <div class="logo">
                                <i class="fas fa-sign-in-alt"></i>
                            </div>
                            <div class="text">
                                <a href="#login-card">Login Details</a>
                            </div>
                        </li>
                        <li class="menu-tickets menu-btn">
                            <div class="logo">
                                <i class="fas fa-ticket-alt"></i>
                            </div>
                            <div class="text">
                                <a href="#ticket-card">Tickets</a>
                            </div>
                        </li>
                        <li>
                            <div class="logo">
                                <i class="fas fa-sign-out-alt"></i>
                            </div>
                            <div class="text">
                                <a class="logout" href="/logout">Logout</a>
                            </div>
                        </li>
                        
                    </ul>
                </div>
                <div class="rightSecContainer">
                    <div id="profile-card" class="profile-details-container card animate__animated animate__fadeIn">
                        <div class="heading-container">
                            <div class="heading">
                                <p class="headingText">Profile</p>
                            </div>
                            <div class="subheading">
                                <p class="subheadingText">Basic Info</p>
                            </div>
                        </div>
                        <div class="editBtnContainer">
                            <button class="edit-btn">Edit</button>
                        </div>
                        <div class="profile-deatails details-container">
                            <div class="details-table">
                                <div class="rows">
                                    <div class="row-heading">Name</div>
                                    <div class="row-info">{{user.name}}</div>
                                </div>
                                <div class="rows">
                                    <div class="row-heading">Birthday</div>
                                    {{#if user.birthDay}}
                                        <div class="row-info">{{user.birthDay}}</div>
                                           
                                    {{else}}
                                        <button class="editProfile">
                                            <i class="fas fa-plus"></i> Add
                                        </button>
                                    {{/if}}
                                </div>
                                <div class="rows">
                                    <div class="row-heading">Gender</div>
                                    {{#if user.Gender}}
                                        <div class="row-info">{{user.Gender}}</div>
                                    {{else}}
                                        <button class="editProfile">
                                            <i class="fas fa-plus"></i> Add
                                        </button>
                                    {{/if}} 
                                </div>
                                <div class="rows">
                                    <div class="row-heading">Marital Status</div>
                                    {{#if user.maritalStatus}}
                                        <div class="row-info">{{user.maritalStatus}}</div>
                                    {{else}}
                                        <button class="editProfile">
                                            <i class="fas fa-plus"></i> Add
                                        </button>
                                    {{/if}} 
                                </div>
                            </div>
                        </div>
                    </div>
                    <div id="login-card" class="login-details-container card animate__animated animate__fadeIn">
                        <div class="heading-container">
                            <div class="heading">
                                <p class="headingText">Login</p>
                            </div>
                            <div class="subheading">
                                <p class="subheadingText">Manage your email address mobile number and password</p>
                            </div>
                        </div>
                        <div class="login-details details-container">
                            <div class="details-table login-table">
                                <div class="rows">
                                    <div class="row-heading">Mobile Number</div>
                                    <div class="row-info">9387520371</div>
                                </div>
                                <div class="rows">
                                    <div class="row-heading">Email Id</div>
                                    <div class="row-info">{{user.email}}</div>
                                </div>
                                <div class="rows">
                                    <div class="row-heading">Passoword</div>
                                    <div class="row-info">*****</div>
                                    <div class="forgotPassword">Forgot Password?</div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div id="ticket-card" class="ticket-details-container card animate__animated animate__fadeIn">
                        <div class="heading-container">
                            <div class="heading">
                                <p class="headingText">Tickets</p>
                            </div>
                            <div class="subheading">
                                <p class="subheadingText">Manage your Tickets</p>
                            </div>
                        </div>
                        <div class="upcoming-tickets tickets-container">
                            <div class="ticket-sort-heading">
                                Upcoming Flights
                            </div>
                            {{#each upcomingTickets as |upcomingTicket|}}
                                <div class="individual-flight-ticket-container ">
                                    <div class="logo-container">
                                        <img class="companyLogo" src="{{upcomingTicket.logo}}" alt="">
                                    </div>
                                    <div class="flight-ticket-details">
                                        <div class="first-column">
                                            <p class="time">{{upcomingTicket.arr}}</p>
                                            <p class="ticket-place arrival-place">{{upcomingTicket.depPlace}}</p>
                                        </div>
                                        <div class="second-column">
                                            <img class="flight-ticket-icon" src="flight-icon.svg" alt="">
                                            <p class="flight-date">{{upcomingTicket.date}}</p>
                                        </div>
                                        <div class="third-column">
                                            <p class="time">{{upcomingTicket.dep}}</p>
                                            <p class="ticket-place departure-place"> {{upcomingTicket.arrPlace}} </p>
                                        </div>
                                        <div class="fourth-column">
                                            <p class="adults number">Adults: {{upcomingTicket.adults}} </p>
                                            <p class="children number">Children: {{upcomingTicket.children}} </p>
                                            <p class="price">Price:₹{{upcomingTicket.price}}</p>
                                        </div>
                                    </div>
                                </div>
                            {{/each}}
                        </div>
                        <div class="expired-tickets tickets-container">
                            <div class="ticket-sort-heading">
                                Previous Flights
                            </div>
                            {{#each expiredTickets as |expiredTicket|}}
                                <div class="individual-flight-ticket-container ">
                                    <div class="logo-container">
                                        <img class="companyLogo" src="{{expiredTicket.logo}}" alt="">
                                    </div>
                                    <div class="flight-ticket-details">
                                        <div class="first-column">
                                            <p class="time">{{expiredTicket.arr}}</p>
                                            <p class="ticket-place arrival-place">{{expiredTicket.depPlace}}</p>
                                        </div>
                                        <div class="second-column">
                                            <img class="flight-ticket-icon" src="flight-icon.svg" alt="">
                                            <p class="flight-date">{{expiredTicket.date}}</p>
                                        </div>
                                        <div class="third-column">
                                            <p class="time">{{expiredTicket.dep}}</p>
                                            <p class="ticket-place departure-place"> {{expiredTicket.arrPlace}} </p>
                                        </div>
                                        <div class="fourth-column">
                                            <p class="adults number">Adults: {{expiredTicket.adults}} </p>
                                            <p class="children number">Children: {{expiredTicket.children}} </p>
                                            <p class="price">Price:₹{{expiredTicket.price}}</p>
                                        </div>
                                    </div>
                                </div>
                            {{/each}}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="profile.js"></script>
</body>
</html>